{{!
    @template core_comment/comment_list_item

    Displays a comments widget

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
        "widgetid": 5894097884e37,
        "id": 10,
        "content": "<div class=\"no-overflow\"><div class=\"text_to_html\">Test comment<\/div><\/div>",
        "format": 1,
        "timecreated": 1486258208,
        "strftimeformat": "%a, %d %b %Y, %I:%M %p",
        "profileurl": "http://localhost/master/user/view.php?id=2&course=1",
        "fullname": "Admin User",
        "time": "Sun, 5 Feb 2017, 9:30 AM",
        "profileimageurl": "http://localhost/master/theme/image.php/boost/core/1486161611/u/f1",
        "userid": 2,
        "delete": true
    }

}}

<li id="comment-{{id}}-{{widgetid}}">
    <div class="comment-message">
        <div class="comment-message-meta">
            <span class="picture">
                <a href="{{profileurl}}">
                    <img src="{{profileimageurl}}" alt="" title="" class="userpicture defaultuserpic" width="18" height="18">
                </a>
            </span>
            <span class="user"><a href="">{{fullname}}</a></span> - <span class="time">{{time}}</span>
        </div>
        <div class="text">
            {{#delete}}
            <div class="comment-delete">
                <a href="#" id="comment-delete-{{widgetid}}-{{id}}" title="Delete this comment">
                    {{# pix }} t/delete, core, Delete the comment {{/ pix }}
                </a>
            </div>
            {{/delete}}
            <div class="no-overflow">{{{content}}}</div>
        </div>
    </div>
</li>
