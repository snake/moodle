<div id="lti_tool_endpoints">
    <table class="admintable generaltable">
        <thead>
            <tr>
                <th>{{#str}}name, core{{/str}}</th>
                <th>{{#str}}url, core{{/str}}</th>
                <th>{{#str}}actions, core{{/str}}</th>
            </tr>
        </thead>
        <tbody>
        {{#urls}}
            <tr>
                <th id="lti_tool_endpoint_name_{{id}}" class="cell">{{name}}</th>
                <td id="lti_tool_endpoint_{{id}}">{{url}}</td>
                <td>
                    <a href="#" role="button" aria-label="{{#str}} copytoclipboard, enrol_lti {{/str}}" id="{{id}}" title="{{#str}}copytoclipboard, enrol_lti{{/str}}">
                        {{#pix}} t/copy, core {{/pix}}
                    </a>
                </td>
            </tr>
        {{/urls}}
        </tbody>
    </table>
</div>
{{#js}}
    require(['enrol_lti/tool_endpoints'], function(ToolEndpoints) {
        ToolEndpoints.init();
    });
{{/js}}
