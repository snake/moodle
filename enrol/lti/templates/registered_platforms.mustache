<div id="lti_registered_platforms" class="mb-3">
<table class="admintable generaltable">
    <thead>
    <tr>
        <th>Name</th>
        <th>Edit</th>
    </tr>
    </thead>

    <tbody>
    {{#registrations}}
        <tr>
            <th>{{name}}</th>
            <td>
                <a class="edit" href="{{editurl}}" title="{{#str}} edit {{/str}}">{{#pix}} t/edit, core, {{#str}} edit {{/str}}{{/pix}}</a>
                <a class="delete" href="{{deleteurl}}" title="{{#str}} delete {{/str}}">{{#pix}} t/delete, core, {{#str}} delete {{/str}}{{/pix}}</a>
            </td>
        </tr>
    {{/registrations}}
    </tbody>
</table>
{{^registrations}}
    <div>
        No registered platforms.
    </div>
    <br>
{{/registrations}}
<div>
    <a class="btn btn-secondary" href="{{addurl}}">Register a platform</a>
</div>
</div>
{{#js}}
    require(['enrol_lti/platform_registry'], function(Registry) {
        Registry.init();
    });
{{/js}}
