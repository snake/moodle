{{!
    @template core_course/chooser

    Chooser dialog template.

    Example context (json):
    {
        "enabled": "true",
        "installed": "false",
        "generic": "https://moodle.com"
    }
}}
{{#enabled}}
    <div class="w-100 d-flex px-2">
        <a aria-label="{{#str}}aria:activitychooserbrowse , core_course{{/str}}"
           class="d-inline my-auto mr-1"
           href="{{generic}}"
           target="_self"
        >
            {{#str}} activitychooserbrowse , core_course{{/str}}
            <span class="moodlenet-logo" aria-hidden="true">{{#pix}} MoodleNet, core {{/pix}}</span>
        </a>
    </div>
{{/enabled}}
